{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}


{% block body %}
	<main class="max-h-[100vh] h-[100vh] overflow-hidden flex justify-between p-[12px]">

		<section class="flex h-full w-full items-center justify-center">
			<section class="w-[400px]">
				<div class="flex gap-[15px] w-full justify-center pb-[30px]">
					<img src="{{ asset('img/azure_black.svg') }}" alt="Logo">
					<h1 class="font-Kamerik105 font-[700] text-[24px] text-[#121212]">Azure</h1>
				</div>

				<div class="w-full pb-[20px]">
					<h2 class="font-sf-pro-display font-[600] text-[24px]">S’inscrire</h2>
					<p class="text-[14px]">Vous avez déjà un compte ?
						<a class="text-green" href="{{ path('app_login') }}">Se connecter</a>
					</p>
				</div>

				{{ form_errors(registrationForm) }}
				{{ form_start(registrationForm) }}

				<div class="flex flex-col gap-[15px]">

					<div class="flex max-w-[400px] gap-[15px]">
						{{ form_row(registrationForm.firstName, { 'attr': {'class': 'input-form w-full'} }) }}
						{{ form_row(registrationForm.lastName, { 'attr': {'class': 'input-form w-full'} }) }}
					</div>
					{{ form_row(registrationForm.username, { 'attr': {'class': 'input-form w-[400px]'} }) }}
					{{ form_row(registrationForm.email, { 'attr': {'class': 'input-form w-[400px]'} }) }}

					<div class="input-form w-[400px] flex items-center">
						{{ form_label(registrationForm.plainPassword, null, {'attr': {'class': 'label-class'}}) }}
						{{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'w-full flex'} }) }}
					</div>

					<div class="input-form w-[400px] flex items-center">
						{{ form_label(registrationForm.confirmPassword, null, {'attr': {'class': 'label-class'}}) }}
						{{ form_widget(registrationForm.confirmPassword, { 'attr': {'class': 'w-full flex'} }) }}
					</div>

					{% if registrationForm.certif is defined %}
						<div class="relative flex justify-center items-center w-full h-[200px] svg-hover cursor-pointer">
							{{ form_row(registrationForm.certif, { 'row_attr': { 'class': 'flex h-full w-full border border-dashed border-[#8A8A8A55] border-[2px] rounded-[15px] z-999 text-transparent cursor-pointer' }, 'attr': { 'class' : 'w-full cursor-pointer'} , 'label': false }) }}
							<div class="absolute flex flex-col items-center gap-[5px] cursor-pointer">
								<svg xmlns="http://www.w3.org/2000/svg" width="36" height="30" viewbox="0 0 36 30" fill="none z-0">
									<path d="M26.9628 7.71362C26.4662 7.6146 26.0596 7.30405 25.8496 6.85997C23.5242 1.95262 18.1337 -0.791359 12.7463 0.201813C7.83744 1.10197 3.98927 5.02065 3.16862 9.95501C2.92558 11.4118 2.94358 12.87 3.21813 14.2908C3.30815 14.7543 3.10861 15.2704 2.69904 15.6425C0.981242 17.2043 -0.00292969 19.4292 -0.00292969 21.7486C-0.00292969 26.2974 3.69821 30 8.24851 30H24.7514C30.9565 30 36.0033 24.9531 36.0033 18.748C36.0033 13.3996 32.2017 8.7578 26.9628 7.71362ZM22.6825 17.5583C22.39 17.8509 22.0059 17.9979 21.6218 17.9979C21.2378 17.9979 20.8537 17.8509 20.5612 17.5583L18.0002 14.9974V22.4987C18.0002 23.3283 17.3281 23.999 16.4999 23.999C15.6718 23.999 14.9997 23.3283 14.9997 22.4987V14.9974L12.4387 17.5583C11.8521 18.1449 10.904 18.1449 10.3174 17.5583C9.73077 16.9717 9.73077 16.0236 10.3174 15.437L14.3786 11.3758C14.9577 10.7967 15.7183 10.5056 16.4789 10.5011L16.4999 10.4966L16.5209 10.5011C17.2831 10.5056 18.0422 10.7967 18.6213 11.3758L22.6825 15.437C23.2691 16.0236 23.2691 16.9717 22.6825 17.5583Z" fill="currentColor"/>
								</svg>
								<p>Importer votre diplôme au format .pdf</p>
							</div>
						</div>
					{% endif %}

				</div>
				<button type="submit" class="greenBtn w-full mt-[40px]">Créer un compte</button>

				{{ form_end(registrationForm) }}

			</section>
		</section>

		<section class="h-full min-w-fit">
			<img class="h-full w-full object-contain rounded-[15px]" src="{{ asset('img/auth_picture.png') }}" alt="Montagne">
		</section>
	</main>
{% endblock %}
