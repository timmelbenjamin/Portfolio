{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}
	<main class="max-h-[100vh] h-[100vh] overflow-hidden flex justify-between p-[12px]">
		<section class="flex h-full w-full items-center justify-center">
			<section class="w-[400px]">
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					<div class="flex gap-[15px] w-full justify-center pb-[30px]">
						<img src="{{ asset('img/azure_black.svg') }}" alt="Logo">
						<h1 class="font-Kamerik105 font-[700] text-[24px] text-[#121212]">Azure</h1>
					</div>

					<div class="w-full pb-[20px]">
						<h2 class="font-sf-pro-display font-[600] text-[24px]">Se connecter</h2>
						<p class="text-[14px]">Pas encore de compte ?
							<a class="text-green" href="{{ path('app_register') }}">S'inscrire</a>
						</p>
					</div>

					<div class="flex flex-col gap-[15px]">
						<input type="email" value="{{ last_username }}" name="_username" id="username" placeholder="Email" class="input-form w-full" autocomplete="email" required autofocus>
						<div class="input-form w-full flex items-center">
							<input type="password" name="_password" id="password" class="w-full" placeholder="Mot de passe" autocomplete="current-password" required>
						</div>
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<button class="greenBtn w-full mt-[40px]" type="submit">
						Se connecter
					</button>

					<div class="w-full my-[20px]">
						<p class="font-sf text-[14px] text-[#A4A4A4] flex gap-[20px] items-center before:content-[''] before:w-[80%] before:h-[1px] before:bg-[#A4A4A4] px-[10px] after:content-[''] after:w-[80%] after:h-[1px] after:bg-[#A4A4A4]">
							Ou</p>
					</div>
					<div class="flex flex-col gap-[15px]">
						<button class="text-[#000000] cursor-pointer hover:scale-97 duration-300 text-[14px] font-sf border border-[#DFDFDF] w-full h-[46px] rounded-[5px] flex justify-center gap-[13px] items-center">
							<img src="{{ asset('img/icons/google.svg') }}" alt="Logo google">
							Connexion avec Google
						</button>
						<button class="bg-[#111111] cursor-pointer hover:scale-97 duration-300 text-[14px] text-white font-sf max-w-[404px] w-full h-[46px] rounded-[5px] flex justify-center gap-[13px] items-center">
							<img src="{{ asset('img/icons/X.svg') }}" alt="Logo X">
							Connexion avec X
						</button>
					</div>
				</form>
			</section>
		</section>
		<section class="h-full min-w-fit">
			<img class="h-full w-full object-contain rounded-[15px]" src="{{ asset('img/auth_picture.png') }}" alt="Montagne">
		</section>
	</main>
{% endblock %}
