{% extends 'realisateurs.twig' %}

{% block main %}
<aside>
<ul>
    {% for realisateurs in tableau_realisateurs %}
    <li><a href="films_par_realisateurs_liste.php?id={{ realisateurs.id }}">{{ realisateurs.nom }} ({{realisateurs.film_count}})</a></li>
    {% endfor %}
</ul>
</aside>
<section class="container">
<div class="right">
    <div><a href="films_par_realisateurs.php?id={{ id }}"><i class="bi bi-grid"></i></a></div>
    <div><a href="films_par_realisateurs_liste.php?id={{ id }}"><i class="bi bi-list"></i></a></div>
</div>
{% for film in tableau_films %}
<article class="liste">
    <div>
        <a href="detail.php?id={{film.id}}"><img src="{{ film.affiche }}" alt="{{ film.nom_film }}"></a>
    </div>
    <div class="colonne">
        <p>{{ film.nom_film }} de {{ film.realisateur }}</p>
        <p>{{ film.theme }} {{ film.annee }}</p>
        <p class="margin_off">Résumé :</p>
        <p class="margin_off">{{film.synopsis}}</p>
    </div>
</article>
{% endfor %}
</section>
{% endblock %}
